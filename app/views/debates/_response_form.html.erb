<% new_debate = @debate.debates.build 
   new_debate.content = "Add your opinion..." %>
<%= form_for new_debate do |support_form| %>
  <% if @debate.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@debate.errors.count, "error") %> prohibited this point from being saved:</h2>
    
    <ul>
      <% @debate.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div>
    <%= support_form.text_area :content, 
	                       :cols => 20, 
                               :rows => 10,
                               :onfocus => "if (this.getValue() === '" + new_debate.content + "'){this.clear();}" %>
  </div>
  <%= support_form.hidden_field :is_supporting, :value => is_supporting %>
  <%= support_form.hidden_field :debate_id, :value => @debate.id %>
  <div class="actions">
    <%= support_form.submit "Submit" %>
  </div>
<% end %>
